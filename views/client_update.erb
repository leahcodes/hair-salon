<h4>Update info for <%= @client.name() %>:</h4>

<form action = "/clients/<%= @client.id %>/update_name" method="post">
  <input type="hidden" name="_method" value="patch" class="form-control">

  <label for="name">Change name to:</label>
  <input id="name" name="name" type="text" class="form-control">

  <button type="submit" class="btn btn-info btn-lg">Update</button>

</form>

<form action = "/clients/<%= @client.id %>/update_phone" method="post">
  <input type="hidden" name="_method" value="patch" class="form-control">

  <label for="phone">Change phone number to:</label>
  <input id="phone" name="phone" type="text" class="form-control">

  <button type="submit" class="btn btn-info btn-lg">Update</button>

</form>
