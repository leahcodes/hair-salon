<h4>Update info for <%= @stylist.name() %>:</h4>

<form action = "/stylists/<%= @stylist.id %>/update_name" method="post">
  <input type="hidden" name="_method" value="patch" class="form-control">

  <label for="name">Change name to:</label>
  <input id="name" name="name" type="text" class="form-control">

  <button type="submit" class="btn btn-info btn-lg">Update</button>

</form>

<form action = "/stylists/<%= @stylist.id %>/update_specialty" method="post">
  <input type="hidden" name="_method" value="patch" class="form-control">

  <label for="specialty">Change specialty to:</label>
  <input id="specialty" name="specialty" type="text" class="form-control">

  <button type="submit" class="btn btn-info btn-lg">Update</button>

</form>
